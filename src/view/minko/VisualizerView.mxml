<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300"
		 creationComplete="creationCompleteHandler(event)">
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	
	<mx:UIComponent id="viewportContainer" width="100%" height="100%"/>
	
	<fx:Script>
         
		
		<![CDATA[
			import aerys.minko.render.Viewport;
			import aerys.minko.render.effect.lighting.LightingEffect;
			import aerys.minko.render.effect.lighting.LightingStyle;
			import aerys.minko.scene.node.camera.ArcBallCamera;
			import aerys.minko.scene.node.group.Group;
			import aerys.minko.scene.node.group.StyleGroup;
			import aerys.minko.scene.node.group.TransformGroup;
			import aerys.minko.scene.node.light.AmbientLight;
			import aerys.minko.scene.node.light.DirectionalLight;
			import aerys.minko.scene.node.mesh.modifier.NormalMeshModifier;
			import aerys.minko.scene.node.mesh.primitive.CubeMesh;
			import aerys.minko.scene.node.mesh.primitive.SphereMesh;
			import aerys.minko.scene.node.texture.ColorTexture;
			import aerys.minko.type.math.ConstVector4;
			import aerys.minko.type.math.Vector4;
			
			import mx.events.FlexEvent;
			
			import view.minko.render.SoundEffect;
			import view.minko.scene.SoundNode;
			
			private var _viewport   : Viewport     		= new Viewport(4);
			private var _camera     : ArcBallCamera		= new ArcBallCamera();
			private var _light		: DirectionalLight	= new DirectionalLight(0xffffff, 0.6, 0.1, 64, new Vector4(1, -1, 1));
			private var _ambiant 	: AmbientLight		= new AmbientLight(0x888888);
			private var _scene 		: StyleGroup		= new StyleGroup(_camera, _light, _ambiant);
			private var _cube		: TransformGroup	= null;
			
			protected function creationCompleteHandler(event : FlexEvent ) : void
			{
				_cube = new TransformGroup(new SphereMesh(40));
				_scene.addChild(new aerys.minko.scene.node.group.Group(
					_camera,
					new SoundNode(),
					new ColorTexture(0x00ff00),
					_cube
				));
				
				_viewport.defaultEffect = new SoundEffect();
				
				_camera.distance = 3.;
				
				_scene.style.set(LightingStyle.LIGHTS_ENABLED, true)
					  .set(LightingStyle.CAST_SHADOWS, true)
					  .set(LightingStyle.RECEIVE_SHADOWS, true);
				
				_viewport.alwaysOnTop = true;
				_viewport.backgroundColor = 0x666666;
				viewportContainer.addChild(_viewport);
				
				_viewport.addEventListener(Event.ENTER_FRAME, enterFrameHandler);
			}
			
			protected function enterFrameHandler(event : Event) : void
			{
				_cube.transform.appendRotation(Math.PI / 100, ConstVector4.Y_AXIS);
				_viewport.render(_scene);
			}
		]]>
	</fx:Script>
</s:Group>
