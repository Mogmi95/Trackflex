<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 height="20" >

	<fx:Script>
		<![CDATA[
			import controller.LibraryController;
			import controller.PlayerController;
			import controller.PlaylistController;
			
			protected function label_rollOverHandler(event:MouseEvent):void
			{
				label.setStyle("textDecoration", "underline");
			}
			
			protected function label_rollOutHandler(event:MouseEvent):void
			{
				label.setStyle("textDecoration", "none");
			}
			
			protected function label_clickHandler(event : MouseEvent) : void
			{
				var arr : Array		= Label(event.currentTarget).text.split(".");
				var ext	: String	= arr[arr.length - 1];
				
				if (ext == "mp3")
				{
					PlaylistController.addTrack(LibraryController.libPath + "/" + Label(event.currentTarget).text);
				}
				else
				{
					LibraryController.loadFromDir(new File(LibraryController.libPath + "/" + Label(event.currentTarget).text));
					LibraryController.populateView();
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
	</fx:Declarations>
	
	<s:Label id="label" left="20" width="100%" height="100%" rollOut="label_rollOutHandler(event)"
			 rollOver="label_rollOverHandler(event)" text="Toto" buttonMode="true"
			 click="label_clickHandler(event)"/>
</s:Group>
