<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" height="50" width="100%"
		 creationComplete="creationCompleteHandler(event )">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function creationCompleteHandler(event : FlexEvent) : void
			{
				label.text = letter;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<fx:String id="letter"></fx:String>
	</fx:Declarations>
	
	<s:BorderContainer bottom="10" width="100%" height="20" textAlign="center" backgroundColor="0x333333"
					   borderColor="0x222222">
		<s:Label id="label" left="10" color="#000000" fontFamily="Verdana" fontSize="18"
				 fontWeight="bold" text="A" verticalAlign="middle" verticalCenter="1"/>
	</s:BorderContainer>
</s:Group>
